<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
    //num of vowels//
let str = "Hello World";
let count = 0;
let vowels = "aeiouAEIOU";
for (let i = 0; i < str.length; i++) {
  if (vowels.includes(str[i])) count++;
}
console.log(count);
//reverse()//
 str = "hello";
let rev = "";
for (let i = str.length - 1; i >= 0; i--) {
  rev += str[i];
}
console.log(rev);
//palindrome//
 str = "madam";
 rev = "";
for (let i = str.length - 1; i >= 0; i--) rev += str[i];
console.log(str === rev ? "Palindrome" : "Not Palindrome");
//uppercase//
 str = "hello world program";
let result = str
  .split(" ")
  .map(word => word.charAt(0).toUpperCase() + word.slice(1))
  .join(" ");
console.log(result);
//replace all//
 str = "hello world program";
console.log(str.replaceAll(" ", "-"));
//sentence//
let sentence = "hi hello hi hi welcome";
let word = "hi";
count = sentence.split(" ").filter(w => w === word).length;
console.log(count);
//one digit//
str = "ab12cd34";
let digits = "";
for (let i = 0; i < str.length; i++) {
  if (!isNaN(str[i]) && str[i] !== " ") digits += str[i];
}
console.log(digits);
//substring//
str = "Hello World";
let sub = "world";
console.log(str.toLowerCase().includes(sub.toLowerCase()));
//trim string//
str = "   hello world   ";
console.log(str.trim());
//count string//
str = "banana";
count = {};
for (let char of str) {
  count[char] = (count[char] || 0) + 1;
}
console.log(count);
//longest sentence//
sentence = "I love programming language";
let words = sentence.split(" ");
let longest = words.reduce((a, b) => (a.length > b.length ? a : b));
console.log(longest);
//anagrams//
let a = "listen", b = "silent";
let isAnagram = a.split("").sort().join("") === b.split("").sort().join("");
console.log(isAnagram);
//hello world//
str = "hello_world_program";
result = str
  .split("_")
  .map(w => w.charAt(0).toUpperCase() + w.slice(1))
  .join(" ");
console.log(result);
//second occurance//
str = "banana";
let letter = "a";
let first = str.indexOf(letter);
let second = str.indexOf(letter, first + 1);
console.log(second);
//remove duplicate//
str = "programming";
result = "";
for (let ch of str) {
  if (!result.includes(ch)) result += ch;
}
console.log(result);
//random number//
let num = Math.floor(Math.random() * 100) + 1;
console.log(num);
//floating number//
num = 3.14159;
console.log(num.toFixed(2));
//max & min number//
let arr = [10, 25, 3, 99, 4];
console.log("Max:", Math.max(...arr));
console.log("Min:", Math.min(...arr));
//roots//
arr = [4, 9, 16];
let roots = arr.map(n => Math.sqrt(n));
console.log(roots);
//random integer//
num = Math.floor(Math.random() * (200 - 50 + 1)) + 50;
console.log(num);
// absolude difference//
a = 10, b = 25;
console.log(Math.abs(a - b));
//dice//
let dice = Math.floor(Math.random() * 6) + 1;
console.log(dice);
//compound interest//
let p = 1000, r = 5, t = 2;
let ci = p * Math.pow(1 + r / 100, t) - p;
console.log(ci);
//area of circle//
let radius = 7;
let area = Math.PI * Math.pow(radius, 2);
console.log(area);
//perfect square//
num = 49;
console.log(Number.isInteger(Math.sqrt(num)) ? "Perfect square":"Not");
//Current date//
now = new Date();
console.log(now);
//current year,month,day//
d = new Date();
console.log("Year:", d.getFullYear());
console.log("Month:",  d.getMonth() + 1); // Month is 0-indexed
console.log("Day:", d.getDate());
//left in the current year//
today = new Date();
let end = new Date(today.getFullYear(), 11, 31);
diff = Math.ceil((end - today) / (1000 * 60 * 60 * 24));
console.log(diff + " days left in this year");
//name of the current day//
days = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];
today = new Date();
console.log("Today is:", days[today.getDay()]);
//compare two dates//
d1 = new Date("2024-05-10");
d2 = new Date("2024-06-15");
console.log(d1 < d2 ? "First date is earlier" : "Second date is earlier");
//add 10 days//
let date = new Date();
date.setDate(date.getDate() + 10);
console.log("After 10 days:", date.toDateString());
//calculate a person's age//
let birth = new Date("2003-06-15");
let today = new Date();
let age = today.getFullYear() - birth.getFullYear();
if (
  today.getMonth() < birth.getMonth() ||
  (today.getMonth() === birth.getMonth() && today.getDate() < birth.getDate())
) {
  age--;
}
console.log("Age:", age);
//dd-mm-yyyy//
let d = new Date();
let day = String(d.getDate()).padStart(2, '0');
let month = String(d.getMonth() + 1).padStart(2, '0');
let year = d.getFullYear();
console.log({day}-{month}-{year});
//number of days b/w two dates//
let d1 = new Date("2025-01-01");
let d2 = new Date("2025-11-03");
let diff = Math.abs(d2 - d1);
let days = diff / (1000 * 60 * 60 * 24);
console.log(days + " days difference");
//1st day and last day//
now = new Date();
first = new Date(now.getFullYear(), now.getMonth(), 1);
let last = new Date(now.getFullYear(), now.getMonth() + 1, 0);
console.log("First:", first.toDateString());
console.log("Last:", last.toDateString());
//hh:mm:ss//
let now = new Date();
let hours = String(now.getHours()).padStart(2, '0');
let minutes = String(now.getMinutes()).padStart(2, '0');
let seconds = String(now.getSeconds()).padStart(2, '0');
console.log({hours},{minutes},{seconds});
//check weekend or weekday//
day = new Date().getDay();
if (day === 0 || day === 6) {
  console.log("Weekend");
} else {
  console.log("Weekday");
}
//display month//
let months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
now = new Date();
console.log("Month:", months[now.getMonth()]);
//specific future//
let future = new Date("2026-01-01");
now = new Date();
diff = future - now;
days = Math.floor(diff / (1000 * 60 * 60 * 24));
console.log(days + " days left for New Year");
//exactly 1 hour from now//
now = new Date();
now.setHours(now.getHours() + 1);
console.log("1 hour from now:", now.toLocaleTimeString());
    </script>
</body>
</html>
