       // 1. Check Positive or Negative Number using switch case
        let n = 45
        switch (true) {
            case (n > 0):
                console.log("Positive");
                break;
            case (n < 0):
                console.log("Negative");
                break;
            case (n === 0):
                console.log("Zero");
                break;
            default:
                console.log("Invalid input");
        }
        //2. Check Even or Odd Input a number.Print “Even” if divisible by 2, else “Odd”.
        switch (true) {
            case (n % 2 == 0):
                console.log("Even");
                break;
            default:
                console.log("Odd");
        }
        //3. Check Voting Eligibility Input an age.Print “Eligible to Vote” if age ≥ 18, else “Not Eligible”.
        switch (true) {
            case (n >= 18):
                console.log("Your Eligible for Vote");
                break;
            default:
                console.log("Your not Eligible for Vote");
        }
        //4. Check Data Type Declare a variable and check if it’s a number, string, or boolean using typeof.
        let data1 = true;
        switch (typeof data1) {
            case "number":
                console.log("It is a Number");
                break;
            case "string":
                console.log("It is a String");
                break;
            case "boolean":
                console.log("It is a Boolean");
                break;
            default:
                console.log("Unknown Data Type");
        }
        //5. Check Greater Number Input two numbers.Print which one is greater.
        let n1 = 90, n2 = 74
        switch (true) {
            case (n1 > n2):
                console.log(n1, "n1 is greater number");
                break
            default:
                console.log(n2, "n2 is greater number");
                break
        }
        //6. Compare Two Strings Input two string variables and check if they are equal or not.
        let str1 = "hello", str2 = "world"
        switch (true) {
            case (str1 == str2):
                console.log("Both Strings are equal");
                break;

            default:
                console.log("Both Strings are not equal");
                break;
        }
        //Check Multiples of 5 Input a number.Print “Multiple of 5” if it’s divisible by 5.
        let h1 = 50
        switch (true) {
            case (h1 % 5 == 0):
                console.log("Given number is divisible by 5");
                break;
            default:
                console.log("Given number is divisible not by 5");
                break;
        }

        // 8. Check if a Number is Zero using switch case
        let z = 10;
        switch (z) {
            case 0:
                console.log("Zero");
                break;
            default:
                console.log("Not Zero");
                break;
        }
        //9. Check Marks Pass / Fail If marks ≥ 35 → “Pass”, else → “Fail”.
        let marks;
        switch (true) {
            case (marks>=35):
                console.log("Pass")
                break;
            default:
                console.log("Fail")
                break;
        }
        //10.Temperature Check If temp < 20 → “Cold”, temp 20–30 → “Warm”, else → “Hot”.
        let temp;
        switch (true) {
            case (temp<20):
                console.log("Cold");
                break;
            case (temp >= 20 && temp <= 30):
                console.log("Warm");
                break;
            default:
                console.log("Hot");
                break;
        }
        //11.Find Largest of Three Numbers Input three numbers and print the largest one.
        let a1 = 25;
        let b1 = 40;
        let c1 = 15;

        switch (true) {
            case (a1 > b1 && a > c1):
                console.log("Largest number is: " + a1);
                break;

            case (b1 > a1 && b1 > c1):
                console.log("Largest number is: " + b1);
                break;

            case (c1 > a1 && c1 > b1):
                console.log("Largest number is: " + c1);
                break;

            default:
                console.log("Two or more numbers are equal and largest");
                break;
        }
        //12.Check Leap Year If year divisible by 4 and not by 100, or divisible by 400 → “Leap Year”.
        let yr = 2004
        switch (true) {
            case (yr % 4 == 0):
                console.log("It is Leap Year")
                break;
            default:
                console.log("It is Not a Leap Year")
                break;
        }

        //13.Check Character Type Input a character.Check if it’s a vowel, consonant, number, or special symbol.
        let char;
        switch (true) {
            case (char === "a" || char === "e" || char === "i" || char === "o" || char === "u" || char === "A" || char === "E"
                || char === "I" || char === "O" || char === "U"):
                console.log("vowel")
                break;

            case ((char >= "a" && char <= "z") || (char >= "A" && char <= "Z")):
                console.log("Consonant");
                break;
            case
                (char >= "0" && char <= "9"):
                console.log("Number");
                break;

            default:
                console.log("Special Symbol");
                break;
        }

        //14.Check Login Credentials If username === "admin" and password === "1234" → print “Login Success”, else “Invalid Credentials”.
        let username;
        switch (true) {
            case (username === "admin" && password === "1234"):
                console.log("Login Success");
                break;
            default:
                console.log("Invalid Credentials");
                break;
        }
        // 15.Check Grade If marks ≥ 90 → “A”, ≥ 80 → “B”, ≥ 70 → “C”, else “Fail”
        switch (true) {
            case (marks >= 90):
                console.log("A");
                break;
            case (marks >= 80):
                console.log("B");
                break;
            case (marks >= 70):
                console.log("C");
                break;
            default:
                console.log("Fail");
                break;
        }


        //16.Check Number Sign and Parity
        let nu;
        switch (true) {
            case (nu > 0 && nu % 2 === 0):
                console.log("Positive Even");
                break;
            case (nu > 0 && nu % 2 !== 0):
                console.log("Positive Odd");
                break;
            case (nu < 0):
                console.log("Negative Number");
                break;
            default:
                console.log("Zero");
                break;
        }

        //17.Check Data Type and Value
        switch (true) {
            case (typeof data === "string" && data !== ""):
                console.log("Valid String");
                break;
            default:
                console.log("Invalid");
                break;
        }


        //18.Discount Calculation
        let price;
        switch (true) {
            case (price > 1000):
                console.log("20% Discount");
                break;
            case (price > 500):
                console.log("10% Discount");
                break;
            default:
                console.log("No Discount");
                break;
        }

        //19.Compare Two Numbers (Equal or Not)
        let x;
        let y;
        switch (true) {
            case (x == y):
                console.log("Equal with ==");
                break;
            case (x === y):
                console.log("Equal with ===");
                break;

            default:
                console.log("Not Equal with ===");
                break;
        }

        //20.Simple Calculator Using If-Else
        let operator;
        switch (true) {
            case (operator === "+"):
                console.log("Result:", num1 + num2);
                break;
            case (operator === "-"):
                console.log("Result:", num1 - num2);
                break;
            case (operator === "*"):
                console.log("Result:", num1 * num2);
                break;
            case (operator === "/"):
                console.log("Result:", num1 / num2);
                break;
            default:
                console.log("Invalid Operator");
                break;
        }
    
